# PostgreSQL
POSTGRES_USER=admin
POSTGRES_PASSWORD=strongpassword123
POSTGRES_DB=deliveroo
POSTGRES_PORT=5432
# POSTGRES_HOST: localhost for local API; wms-postgres for pgadmin (Docker network)
POSTGRES_HOST=wms-postgres

# WMS API (when running locally)
PORT=3001
SERVICE_NAME=wms-api
# For local API connecting to Docker postgres:
POSTGRES_URL=postgresql+psycopg2://admin:strongpassword123@localhost:5432/deliveroo

# CORS - comma-separated list of allowed origins (e.g. Angular dev server)
CORS_ORIGINS=http://localhost:4200

# pgAdmin
PGADMIN_DEFAULT_EMAIL=pgadmin@example.com
PGADMIN_DEFAULT_PASSWORD=pgadmin_password

# Frontend API URL (for local dev)
API_URL=http://localhost:3001
